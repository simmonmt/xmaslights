    name = "send_ddp",
    srcs = ["send_ddp.cc"],
    linkopts = select({
        "@platforms//os:macos": ["-undefined error"],
        "//conditions:default": [],
    }),
    deps = [
        ":ddp",
        ":net",
        "@com_google_absl//absl/flags:flag",
